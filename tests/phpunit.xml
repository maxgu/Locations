<?xml version="1.0" encoding="UTF-8" ?>

<phpunit bootstrap="Bootstrap.php"
         colors="true">

    <testsuites>
        <testsuite name="unit tests">
            <directory>UnitTest</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>